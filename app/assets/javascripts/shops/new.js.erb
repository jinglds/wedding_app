$(function() {


	$("#shop_categories").tokenInput("/shops/categories.json", {
	    prePopulate:       $("#shop_categories").data("pre"),
	    preventDuplicates: true,
	    noResultsText:     "No results, needs to be created.",
	    animateDropdown:   false
	  });
	$("#shop_styles").tokenInput("/shops/styles.json", {
	    prePopulate:       $("#shop_styles").data("pre"),
	    preventDuplicates: true,
	    noResultsText:     "No results, needs to be created.",
	    animateDropdown:   false,
	    theme: 'facebook'
	  });

	$('#shop-form-tags-div').hide();
	$('#shop-form-contact-div').hide();
	$('#shop-form-basic-div').hide();

	$('#shop-next-btn-p').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-basic-div').fadeIn();
	    
		$('#shop-form-attachment-div').hide();
		
	
    });
    $('#shop-back-btn-p').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-attachment-div').fadeIn();
	    
		$('#shop-form-basic-div').hide();
		
	
    });

  	$('#shop-next-btn1').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-basic-div').hide();
	    
		$('#shop-form-contact-div').fadeIn();
		
	
    });
    $('#shop-back-btn1').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-basic-div').fadeIn();
	    
		$('#shop-form-contact-div').hide();
		
	
    });

    $('#shop-next-btn2').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-contact-div').hide();
	    
		$('#shop-form-tags-div').fadeIn();
		
    });

    $('#shop-back-btn2').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form-contact-div').fadeIn();
	    
		$('#shop-form-tags-div').hide();
		
	
    });


    $('#shop-submit-btn').click(function(event){
	    event.preventDefault();
	    
	    $('#shop-form').submit();
	    
		
	
    });

    



});

