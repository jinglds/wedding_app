<div class="container ">
  <div class="row">
      <div class="user-form-container col-md-4 col-md-offset-4">
         <h2>Sign up</h2>
    <div class=" user-form form-all ">
      <%= form_for(resource, as: resource_name, :class => "form-horizontal",  url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          
          
          <%= f.label :firstname %>
          <%= f.text_field :firstname, autofocus: true, placeholder:"Firstname", class: "form-field" %>
          <%= f.label :lastname %>
          <%= f.text_field :lastname, placeholder:"Lastname", class: "form-field" %>
          <%= f.label :email, "E-mail address" %>
          <%= f.email_field :email,  placeholder:"Email", class: "form-field" %>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", placeholder:"Password (8 characters min)", class: "form-field" %>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm Password", class: "form-field" %>
        <%= f.label :approval, "I want to sign up as a/an:" %> 
        <%= f.select :approval, [['Event Organizer', false], ['Vendor', true]], class: "form-field" %><span class="small">You will have to wait for approval if you register as an Enterprise</span> 

        </div>
        <div class="center">
          <br>
          <%= f.submit "Sign up", class: "btn user-submit-btn" %> or <%= link_to "Log in", new_session_path(resource_name) %><br />
        </div>
      <% end %>
    </div>
      </div>
  </div>

   
 
</div>
