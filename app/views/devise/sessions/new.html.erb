<div class="container">
	<h2>Log in</h2>
	<div class=" user-form container-fluid">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<%= f.label :email, "E-mail address" %>
		  	<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-field" %>
			<%= f.label :password %>
		  	<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-field" %>

					
			<%= f.check_box :remember_me %> 
			<%= f.label :remember_me, class: "check_box inline"  %>
				
			  	<%= f.submit "Log in", class: "btn btn-default user-submit-btn" %> or
			  	<%= link_to "Sign up", new_registration_path(resource_name) %>
		  	
		<% end %>
		<p>
  		<%= link_to "Forgot your password?", new_password_path(resource_name) %>
	</div>
</div>
