<div class="vendor-block vendor-index col-md-2">
	<%= render partial:'vendors/vendor_item', locals:{:vendor=>vendor} %>
	<div class="block-action">
		<%= link_to "edit", edit_vendor_path(vendor) %> | 
		<%= link_to "add to event", new_event_vendor_path(:vendor_id=>vendor.id) %> |
		<%= link_to "Delete", vendor_path(vendor), method: :delete,
		                                         data: { confirm: "You sure?" },
		                                         title: vendor.name %>
	</div> 
	<% vendor.events.each do |e| %>
	<%= e.name %><br>
	<% end %>
</div>
