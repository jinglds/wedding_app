<div class="container">
  <h2>Edit <%= @shop.name.to_s.humanize %></h2>

      <%= devise_error_messages! %>
  <div class=" user-form form-all ">
    <%= form_for(shop, as: shop_name, url: registration_path(shop_name), html: { method: :put }) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Profile</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= f.label :firstname %>
        <%= f.text_field :firstname, autofocus: true, placeholder:"Firstname", class: "form-field" %>
        <%= f.label :lastname %>
        <%= f.text_field :lastname, placeholder:"Lastname", class: "form-field" %>
      </div>
      <div class="col-md-4">
        <%= f.label :address %>
        <%= f.text_field :address, placeholder:"Address", class: "form-field", rows: "1" %>

        <%= f.label :phone, "Phone No." %>
        <%= f.text_field :phone,  placeholder:"Phone No.", class: "form-field" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Account</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= f.label :email, "E-mail address" %>
        <%= f.email_field :email, autofocus: true, placeholder:"Email", class: "form-field" %>
      </div>
      <div class="col-md-4 ">
        <%= f.label :password, "New Password" %> <i>(leave blank if unchange)</i>
        <%= f.password_field :password, autocomplete: "off", class: "form-field" %>

        <%= f.label :password_confirmation, "New Password Confirmation" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-field" %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Membership</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        
          <%= f.label :role, "Membership Status" %>
          <div class="row">
          <div class="col-md-4">
            <%= f.text_field :role, disabled: "disabled", id: "role-field", class: "form-field pull-left" %>
          </div>
          <div class="col-md-7 col-md-offset-1">
            <div class="checkbox">
            <%= f.check_box :approval %>
            <i><b><%= f.label :approval, "I want to sign up as Vendor" %></b></i>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= f.label :current_password %> <i>(We need your current password to confirm changes)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: "form-field" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="pull-right">
        <%= f.submit "Update", class: "btn btn-default user-submit-btn" %>
        </div>
      </div>
    </div>
      <% end %>
      


    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(shop_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>

        <% if devise_mapping.confirmable? && shop.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= shop.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
