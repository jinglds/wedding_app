<% provide(:title, @event.name) %>
<div class="container">
<h2><%= @event.name %> 's Tasks</h2>


<div class="row">
	<div class="col-md-7">
		<div id="calendar-div">
			<%= render 'shared/calendar' %>
		</div>
	</div>
	<div class="col-md-5">
		<h3>Today</h3>
		<div id="today-div">
			<%= render 'tasks/today' %>
		</div>
	</div>
	
</div>



<h3>This Week</h3>
<div id="week-div">
<%= render 'tasks/week' %>
</div>



<h2>now</h2>
<div id="uncomplete-tasks-div">
  <%= render @now %>
</div>

<h2>done</h2>
<div id="complete-tasks-div">
  <%= render @done %>
</div>


<%= nested_tasks @tasks.arrange(:order => :created_at) %>

</div>