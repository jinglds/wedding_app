<% provide(:title, @event.name) %>
<%= render 'events/heading' %>
<div class="container">
<div class="row">
	<%= render 'events/event_menu' %>
</div>



	
	<div class="row">
		<div class="col-md-9">
			<br>
       <span class="no-text">You can add vendor to task only if you have added the vendor to the event the task belongs to.</span> 
			<div class="row" >
				<div id="calendar-div" class="calendar-div">
					<%= render 'shared/calendar' %>
				</div>
				
			</div>

			<div class="row">
					<div id="today-div" class="calendar-div">
						<%= render 'tasks/today' %>
					</div>
			</div>
			
			<!-- <div class="row">
				<div id="week-div" class="calendar-div">
					<%= render 'tasks/week' %>
				</div>
			</div> -->
			<div class="row">
				<div id="late-tasks-div" class=" tasks-div">
					<h3>Late Tasks</h3>
					<% if @lates.any? %>
						<div id="late-div">
							<%= render @lates %> 
						</div>	
					<% else %>
						<span class="no-text">(No late tasks)</span>
					<% end %>
				</div>
				<div id="all-tasks-div" class=" tasks-div">
					<h3>All Tasks</h3>
					<% if @tasks.any? %>
						<div id="all-div">
							<%= render @tasks %> 
						</div>
					<% else %>
						<span class="no-text">(No tasks)</span> 
					<% end %>
				</div>
				<div id="complete-tasks-div" class=" tasks-div">
					<h3>Completed Tasks</h3>
					<% if @done.any? %>
						<div id="done-div">
							<%= render @done %> 
						</div>
					<% else %>
						<span class="no-text">(No tasks completed)</span>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-md-3 ">
	      
	      <div class="guest-nav">
	        <ul class="list-unstyled nav" id="guest-menu" role="tablist" aria-multiselectable="true">
	        	<li>
	        		<%= link_to "Calendar", '#', id:"calendar-div-btn" %>
	        	</li>
	          	<li>
		          	<%= link_to '#', id:"late-task-btn" do %>
							<%= @lates.count %> Late Tasks
					<%end%>
				</li>
				<li>
					<%= link_to '#', id:"all-task-btn" do %>
						<%= @tasks.count %> Total Tasks 
					<%end%>
				</li>
				<li>
					<%= link_to '#', id:"completed-task-btn" do %>
						<%= @done.count %> Completed Tasks
					<%end%>
				</li>
	          	
	        </ul>
	      </div>

			<div class="panel tools-panel center">
				<ul class="list-unstyled">
					<li><%= link_to "create default tasks", event_default_tasks_path(@event), method: :post, :data => {:toggle=>"tooltip", :placement=>"bottom"}, :title=>"Create recommended set of tasks for the event" %></li>
					<hr>
					<li><%= link_to "clear all default tasks", event_clear_tasks_path(@event), method: :put, :data => {:toggle=>"tooltip", :placement=>"bottom", confirm: "Are you sure you want to delete all default tasks? Tasks you added will not be deleted"}, :title=>"delete task", :title=>"Tasks you added will not be deleted"  %></li>
				</ul>
			</div>

			<div class="panel ">
				<a data-toggle="collapse"  href="#task-form" aria-expanded="true" aria-controls="guest-form">
	            <h4 class="center">New Task <b class="caret"></b></h4>
	      		</a>
	      		<div id="task-form" class="collapse ">
	         		<%= render 'tasks/task_form' %>
	     	 	</div>
			</div>
	     
				
			</div>
  		</div>
	</div>
		
</div>