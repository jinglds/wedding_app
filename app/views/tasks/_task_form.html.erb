<div class=" form-all container-fluid col-md-4 col-md-offset-4">

<%= form_for([@event, @task]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-field" %>

    <%= f.label :due_date %>
    <div class="input-group date" id="datetimepicker5">
      <%= f.text_field :due_date, class: 'form-control form-field' %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>

    <%= f.label :redo %>
    <%= f.text_field :redo, class: "form-field" %>

    <%= f.label :rank %>
    <%= f.text_field :rank, class: "form-field" %>

    <%= f.label :optional %>
    <%= f.text_field :optional, class: "form-field" %>

    <%= f.label :completed %>
    <%= f.text_field :completed, class: "form-field" %>

    <%= f.label :note %>
    <%= f.text_area :note, class: "form-field" %>

    <%= f.label :reminder %>
    <div class="input-group date" id="datetimepicker2">
      <%= f.text_field :reminder, class: 'form-control form-field' %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>

    <%= f.label :importance %>
    <%= f.text_field :importance, class: "form-field" %>

  <%= f.label :tag_list, "Style Tags (separated by commas)" %><br />
  <%= f.text_field :tag_list %>


  </div></br>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

   <script type="text/javascript">
            $(function () {
                $('#datetimepicker4').datetimepicker({
                    // pickDate: false
                });
                $('#datetimepicker5').datetimepicker({
                  // pickTime: false
                });

                $('#datetimepicker1').datetimepicker({
                    // pickDate: false
                });
                $('#datetimepicker2').datetimepicker({
                  // pickTime: false
                });

            $("#datetimepicker2").on("dp.change",function (e) {
               $('#datetimepicker5').data("DateTimePicker").setMinDate(e.date);
            });
            $("#datetimepicker5").on("dp.change",function (e) {
               $('#datetimepicker2').data("DateTimePicker").setMaxDate(e.date);
            }); 


            });

   
    </script>

</div>
