<%= form_for([@event, @task]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :deadline %>
    <%= f.text_field :deadline %>

    <%= f.label :status %>
    <%= f.text_field :status %>

    <%= f.label :note %>
    <%= f.text_field :note %>

    <%= f.label :reminder %>
    <%= f.text_field :reminder %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

