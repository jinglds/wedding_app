$("#calendar-div").html("<%= escape_javascript(render 'shared/calendar' ) %>")
$("#week-div").html("<%= escape_javascript(render 'tasks/week' ) %>")
$("#today-div").html("<%= escape_javascript(render 'tasks/today' ) %>")

$("#day_<%= @date.strftime('%d') %>").addClass('selected');
