$('.add-vendor-block-div').hide();
$('.whole-task-item').hover(
		function(event){
	    // $(this).('.add-vendor-block-div').fadeIn()
	    $(this).children().children('.add-vendor-block-div').fadeIn()
		},
		function(event){
	    $(this).children().children('.add-vendor-block-div').fadeOut()
		}

	);