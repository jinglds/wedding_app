<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <%= f.submit "Submit", class: "btn all-btn btn-large" %>
<% end %>

