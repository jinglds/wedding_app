  <div  class="side-nav">

    <div class="side-top">
      <div class="transparent-s">x</div>
    </div>

    <div class="logo-div">
      <%= link_to image_tag("logo-tp.png", :border => 0, :alt => "home image", :width => 180, :height => 60, :title => "The Wedding Enchanter"), root_path, id: "logo" %>
    </div>
        
      
    <div class="center side-menu">
      <ul class="list-unstyled">

    
      <li>
         <%= link_to image_tag("home_icon.png", :border => 0, :alt => "home icon", :width => 18, :height => 18, :title => "home icon"), root_path %>
      </li>
        <li><%= link_to "About",    '#about' %></li>
        <li><%= link_to "Information",    '#' %></li>

        <li><%= link_to "Vendors",    shops_path %></li>
    </ul>

    <div class="aligncenter line-divider" >-</div> 

      <% if signed_in? %>
        <ul class="list-unstyled" id="user-menu" role="menu" aria-multiselectable="true">
          <li>
            <a data-toggle="collapse" data-parent="#user-menu" href="#my-events-nav" aria-expanded="true" aria-controls="my-events-nav">
              My Events <b class="caret"></b>
            </a>
            <ul id="my-events-nav" class="collapse list-unstyled" role="tabpanel" aria-labelledby="my-events">
              <li><%= link_to "New Event", new_event_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Manage Events", myevents_path %></li>
              <li><%= link_to "My Vendors", vendors_path %></li> 
            </ul>
          </li>
          <% if enterprise?(current_user) || admin?(current_user) %>
            <li>
              <a data-toggle="collapse" data-parent="#user-menu" href="#my-shops-nav" aria-expanded="true" aria-controls="my-shops-nav">
                My Shops <b class="caret"></b>
              </a>
              <ul id="my-shops-nav" class="collapse list-unstyled" role="tabpanel" aria-labelledby="my-shops">
                <li><%= link_to "New Shop", new_shop_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Manage Shops", myshops_path %></li>
                <li>
                  <%= link_to "Shop Settings", "#" %>
                </li>
              </ul>
            </li>
          <% end %>


          <% if admin?(current_user) %>

            <li>
              <a data-toggle="collapse" data-parent="#user-menu" href="#users-nav" aria-expanded="true" aria-controls="my-shops-nav">
                Manage Users <b class="caret"></b>
              </a>
              <ul id="users-nav" class="collapse list-unstyled" role="tabpanel" aria-labelledby="users">
                <li><%= link_to "All Users",    users_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Pending Users", pendings_path %></li>
              </ul>
            </li>

            <li>
              <a data-toggle="collapse" data-parent="#user-menu" href="#my-articles-nav" aria-expanded="true" aria-controls="my-articles-nav">
                Articles <b class="caret"></b>
              <ul id="my-articles-nav" class="collapse list-unstyled" role="tabpanel" aria-labelledby="my-articles">
                <li><%= link_to "Manage Articles",articles_path %></li>
              </ul>
            </li>

          <% end %>
        </ul>

        <div class="aligncenter line-divider" >-</div> 

      <ul class="list-unstyled">
        <li>
          <a data-toggle="collapse" data-parent="#user-menu" href="#my-account-nav" aria-expanded="true" aria-controls="my-articles-nav">
            Account <b class="caret"></b></a>
          <ul id="my-account-nav" class="collapse list-unstyled" role="tabpanel" aria-labelledby="my-account">
            <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_account_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
          </ul>
        </li>
      </ul>

     <% else %>
          <ul >
              <li><%= link_to "Log In",    signin_path, id: "signin-btn" %></li>
              <li><%= link_to "Register",    signup_path, id: "signup-btn" %></li>
          </ul>
        <% end %>
      
    </div>
    
    
  </div>


      
     