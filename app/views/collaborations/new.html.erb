<div class="container">
	<%= form_for(@collaboration) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="field">

			<%= f.hidden_field :event_id, :value => @event.id%>
		  	<%= f.label :user_id, "Enter the email of your collaborator" %>
		    <%= f.text_field :user_id, required: true %>

		      <%= f.submit "Post", class: "btn all-btn" %>
		      <%end%>

			</div>
</div>