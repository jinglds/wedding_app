<%= render 'events/heading' %>
<div class="container">
	<div class="row">
		<%= render 'events/event_menu' %>
	</div>
	<div class="row">

		<div class="col-md-4 col-md-offset-4">
			<h3>Invitation to Collaboration </h3>
			<%= form_for(@collaboration) do |f| %>
			  <%= render 'shared/error_messages', object: f.object %>
			  <div class="field">

				<%= f.hidden_field :event_id, :value => @event.id%>
			  	<%= f.label :user_id, "Enter the email of your collaborator" %>
			    <%= f.text_field :user_id, required: true %>

			    <%= f.submit "Send", class: "btn all-btn" %>
			<%end%>
		</div>	
		</div>
		
	</div>

	
</div>