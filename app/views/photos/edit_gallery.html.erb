<% @photos.each do |p| %>
  <%= image_tag p.image_url %>

  <% if (current_user==@shop.user) %>
	  <%= link_to "Edit", edit_shop_photo_path(@shop, p) %> |
	  <% if (p.cover==false) %>
	  	<%= link_to "Set as Cover", shop_set_cover_path(@shop, :id =>p.id), method: :put %> |
	  <% else %>
	  	This is cover photo |
	  <% end %>
	  <%= link_to "Delete", shop_photo_path(@shop, p.id), method: :delete,
	                                     data: { confirm: "You sure?" } %>
	<% end %>
<% end %>