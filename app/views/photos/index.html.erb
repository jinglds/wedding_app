<div class="container">
<div class="transparent-s">x</div>
<h1><%= @shop.name.titleize %>'s Gallery</h1>
<%= link_to '< Back to Shop', shop_path(@shop), class: 'btn back-btn pull-left' %>
<% if (current_user==@shop.user) %>
	<%= link_to new_shop_photo_path(:shop_id => @shop.id), class: 'btn all-btn pull-right' do %> 
		+ ADD PHOTO
	<%end%>
<% end %>
<div class="transparent-s">x</div>
<ul class="row" id="photos-list">
  <%= render partial: "photos/photo_item", collection: @photos, as: :photo, locals: {:shop => @shop} %>
</ul>
</div>

