<div class="container">
  <% provide(:title, @user.firstname) %>
<div class="row">
  <aside class="span4">
    <section>
      <h2>
        <%= @user.firstname %>
      </h2>
        <p><%= @user.role %>
        <p><%= @user.email %>
          <%= link_to "edit profile", edit_user_registration_path(@user) %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.shops.any? %>
      <h3>Shops (<%= @user.shops.count %>)</h3>
      <ol class="microposts">
        <%= render @shops %>
      </ol>
      <%= will_paginate @shops %>
    <% end %>
    <% if @user.events.any? %>
      <h3>Events (<%= @user.events.count %>)</h3>
      <ol class="microposts">
        <%= render @events %>
      </ol>
    <% end %>
      <h3>My Rated Shop (<%= @rated.size %>)</h3>
      <ol class="microposts">
        <%= render @rated %>
      </ol>
    
    <% if @favorites.any? %>
      <h3>My Favorite Shop (<%= @favorites.size %>)</h3>
      <ol class="microposts">
        <%= render @favorites %>
      </ol>
      
    <% end %>
  </div>



</div>
</div>