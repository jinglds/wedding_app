  <div class="row user-details">
    <div class="col-md-4 col-md-offset-1">
      <h3>Information</h3>
      <hr>
      <%= image_tag("member_icon.png", :height=>18, :width=> 20, :border => 0, :alt => "email icon") %> <%= @user.role %>
      <br><%= image_tag("email_icon.png", :height=>18, :width=> 18, :border => 0, :alt => "email icon") %> <%= @user.email %>
      <br><%= image_tag("phone_icon.png", :height=>18, :width=> 18, :border => 0, :alt => "phone icon") %> <%= @user.phone %>
      <br><%= image_tag("location_icon.png", :height=>18, :width=> 18, :border => 0, :alt => "location icon") %> <%= @user.address %>
        
<!--     </div>
   
    <div class="col-md-4"> -->
      
      <div class="transparent-s">x</div>
      <h3>Activities</h3>
      <hr>
      <% if  @user.find_voted_items.any? %>
        <%= link_to  '#' do %>
          <%= @user.find_voted_items.count %> Ratings
        <% end %>
      <% else %>
        n/a
      <% end %>
      <br>
      <% if  @user.comments.any? %>
        <%= link_to  '#' do %>
          <%= @user.comments.count %> Comments
        <% end %>
      <% else %>
        n/a
      <% end %>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <h3>Owner of </h3>
      <hr>
      <% if @user.shops.any? %>
         <% @shops.each do |s| %>
          <li>
            <%= link_to s.name.titleize, s %>
          </li>
          <%end %>
      <% end %>
    </div>
     

    
    



           

   
</div>



