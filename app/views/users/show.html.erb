<% provide(:title, @user.firstname) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.firstname %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.shops.any? %>
      <h3>Shops (<%= @user.shops.count %>)</h3>
      <ol class="microposts">
        <%= render @shops %>
      </ol>
      <%= will_paginate @shops %>
    <% end %>
  </div>
</div>

