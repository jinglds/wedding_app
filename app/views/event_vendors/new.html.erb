<div class="heading-block">
	<h1 class="elegant">My Vendors</h1>

</div>
<div class="container">
	<div class=" row">
		<div class="col-md-offset-5">
		<%= render @vendor %>
			
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
		
			<br> <br>
			<%= form_for(@event_vendor) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="field">
			<%= f.hidden_field :vendor_id, :value => @vendor.id%>
		    <%= f.collection_select :event_id, @events, :id, :name, {:prompt => "Please select an event to add to" } %>

		      <%= f.submit "Post", class: "btn all-btn" %>

			</div>
		<% end %>
	</div>
	</div>
	
	
</div>

