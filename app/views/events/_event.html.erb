<li>
  <span class="content">Name: <%= link_to event.name, event %></span>
  <span class="content">TYPE: <%= event.event_type %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(event.created_at) %> ago.
  </span>



  
  <% if (current_user==event.user) %>
  <%= link_to "edit", edit_event_path(event.id) %> |
    <%= link_to "delete", event, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: event.name %>
  <% end %>
</li>
