<div class="container">
<% provide(:title, @event.name) %>
<% if signed_in? %>
<h2><%= @event.name %></h2>
<p>
    Current Total : <%= @total %>



<h3>MY Expenses</h3>
<p><%= link_to "New Expense", new_event_expense_path(@event) %>
<%= render @expenses %>

<h3>MY Tasks</h3>
<p><%= link_to "New Task", new_event_task_path(@event) %>
<%= render @tasks %>

<% end %>
</div>