<div class="container">
<% provide(:title, @event.name) %>
<% if signed_in? %>
<h2><%= @event.name %></h2>
<p>
    Current Total : <%= @total %>

<%= link_to "New Expense", new_event_expense_path(@event) %>
<%= link_to "New Task", new_event_task_path(@event) %>
<h3>MY Expenses</h3>
<%= render @expenses %>

<h3>MY Tasks</h3>
<%= render @tasks %>

<% end %>
</div>