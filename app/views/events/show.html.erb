<div class="container">
<% provide(:title, @event.name) %>


<h2><%= @event.name %></h2>
<p>Date: <%= @event.date.strftime("%A %B %d %Y  ||  %m/%d/%Y  || %H:%M")%>
<p>Time: <%= @event.time.strftime('%H:%M') %>
<p><%= @event.time.to_time%>

	<p> Days Til : 
    Current Total : <%= @total %>



<h3>MY Expenses</h3>
<p><%= link_to "New Expense", new_event_expense_path(@event) %>
<%= render @expenses %>

<h3><%= link_to "MY Tasks", event_tasks_path(@event) %></h3>
<b><%= link_to "default task", event_default_tasks_path(@event), method: :post %>

<p><%= link_to "New Task", new_event_task_path(@event) %>

<h2>Now</h2>
<%= render @now %>
<h2>Completed</h2>
<%= render @completed %>

</div>