<div class="heading-block">
	<div class="action-btn ">
	<span>
		<%= link_to image_tag("add_colabo_icon_white.png",  :width=> 18, :height=>18, :border => 0, :alt => "edit event icon"), new_collaboration_path(:event_id=>@event.id), :data => {:toggle=>"tooltip", :placement=>"bottom"}, :title=>"share event", class: "inline-block"%>

	</span>
	<span>
		<%= link_to image_tag("edit_icon_white.png",  :width=> 18, :height=>18, :border => 0, :alt => "edit event icon"), edit_event_path(@event), :data => {:toggle=>"tooltip", :placement=>"bottom"}, :title=>"edit event", class: "inline-block"%>
	</span>
	<span>
		<%= link_to image_tag("delete_icon_white.png",  :width=> 18, :height=>18, :border => 0, :alt => "delete event icon"), event_path(@event), :data => {:toggle=>"tooltip", :placement=>"bottom",confirm: "You sure?"}, :title=>"delete event", method: :delete,class: "inline-block" %>
	</span>
		
</div>
	
	<h4 class="cursive center"><%= @event.bride_name %>'s & <%= @event.groom_name %>'s</h4>
	<h1 class="elegant"><%= @event.name.titleize %></h1>
	
</div>
