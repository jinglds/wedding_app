<%= form_for(@shop) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <%= f.label :email %>
    <%= f.text_field :email %>


    <%= f.label :website %>
    <%= f.text_field :website %>

    <%= f.label :details %>
     <%= f.text_field :details %>


      <%= f.fields_for :photos do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "photos[image][]" %>
     </div>
   <% end %>




  <%= f.label :category_list, "Category Tags (separated by commas)" %><br />
  <%= f.text_field :category_list %>


  <%= f.label :style_list, "Style Tags (separated by commas)" %><br />
  <%= f.text_field :style_list %>


  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

