<div class=" form-all container-fluid col-md-4 col-md-offset-4">
<%= form_for(@shop) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-field" %>

    <%= f.label :description %>
    <%= f.text_field :description, class: "form-field" %>

    <%= f.label :address %>
    <%= f.text_field :address, class: "form-field" %>

    <%= f.label :phone, "Contact Number" %>
    <%= f.text_field :phone, class: "form-field" %>

    <%= f.label :email %>
    <%= f.text_field :email, class: "form-field" %>


    <%= f.label :website %>
    <%= f.text_field :website, class: "form-field" %>

    <%= f.label :details %>
     <%= f.text_field :details, class: "form-field" %>


      <%= f.fields_for :photos do |p| %>
     <div class="field">
       <%= p.label :image %><br>
       <%= p.file_field :image, :multiple => true, name: "photos[image][]" %>
       
     </div>


   <% end %>




  <%= f.label :category_list, "Category Tags (separated by commas)" %><br />
  <%= f.text_field :category_list %>


  <%= f.label :style_list, "Style Tags (separated by commas)" %><br />
  <%= f.text_field :style_list %>


  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

</div>

