
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="container">
	<h3><%= @expense.title %></h3>
Amount: <%= @expense.amount %><p>
Status: <%= @expense.status %>

<% if (current_user==@event.user) %>
  <%= link_to "edit", edit_event_expense_path(@event, @expense.id) %> | 
    <%= link_to "delete", event_expense_path(@event, @expense.id), method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: @expense.title %>
  <% end %>
  </div>

<%= yield :charts_js %> 